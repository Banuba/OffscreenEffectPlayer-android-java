<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    android:layout_height="match_parent"
    tools:context="com.banuba.offscreen.app.MainActivity">

    <Button
        android:id="@+id/activity_main_btn_portrait"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/portrait_orientation_demo" />

    <Button
        android:id="@+id/activity_main_btn_full_sensor"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/full_sensor_orientation_demo" />

    <Button
        android:id="@+id/activity_main_btn_default"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/default_orientation_demo" />


</LinearLayout>